@model JoinViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <a asp-area="" asp-controller="Home" asp-action="Index"><h1 class="display-1">RubyInstrument</h1></a>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Goods" asp-action="InstrumentList">악기</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Goods" asp-action="PartList">부속품</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Goods" asp-action="EctList">기타 용품</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container main">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <aside>
            <div class="row justify-content-center">
                <div class="col-xs-12">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="form-group IsAuthenticated">
                            <p>@User.Identity.Name.Split('@').FirstOrDefault()님 반갑습니다.</p>
                            <a class="btn btn-info form-control text-white" asp-area="" asp-controller="Home" asp-action="Logout">로그아웃</a>
                        </div>
                    }
                    else
                    {
                        <form method="post" class="form-horizontal">
                            <div class="form-group">
                                <input asp-for="Email" class="form-control" placeholder="Email"/>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Password" class="form-control" placeholder="비밀번호"/>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-info form-control">로그인</button>
                            </div>
                        </form>
                        <div class="form-group">
                            <a class="btn btn-info form-control text-white" asp-area="" asp-controller="Home" asp-action="Join">회원가입</a>
                        </div>
                    }


                </div>
            </div>
        </aside>
    </div>

    <footer class="border-top footer">
        <div class="container">
            <h1>RubyInstrument</h1>
            <a asp-area="" asp-controller="Home" asp-action="Index">hiper20@naver.com</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
